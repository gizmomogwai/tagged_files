%h1 Listing tagged_files

%table
  %tr
    %th Sha1
    %th Size
    %th Original filename
    %th Comment
    %th Tags
    %th
    %th
    %th

  - @tagged_files.each do |tagged_file|
    %tr
      %td= tagged_file.sha1
      %td= tagged_file.size
      %td= tagged_file.original_filename
      %td= tagged_file.comment
      %td!= tag_links(tagged_file)
      %td= link_to 'Show', tagged_file
      %td= link_to 'Edit', edit_tagged_file_path(tagged_file)
      %td= link_to 'Destroy', tagged_file, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Tagged file', new_tagged_file_path

%br
= form_tag(tagged_files_path, :method => :get) do |f|
  .field
    = label_tag :query
    = text_field_tag :query
  .actions
    = submit_tag :search

