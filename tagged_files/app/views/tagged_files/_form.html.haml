= form_for @tagged_file do |f|
  -if @tagged_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tagged_file.errors.count, "error")} prohibited this tagged_file from being saved:"
      %ul
        - @tagged_file.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :tag_list
    = f.text_field :tag_list
  .field
    = f.label :binary_data
    = f.file_field :binary_data
  .actions
    = f.submit 'Save'
